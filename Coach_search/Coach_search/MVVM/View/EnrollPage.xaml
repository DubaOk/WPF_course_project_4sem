<Page x:Class="Coach_search.MVVM.View.EnrollPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:sys="clr-namespace:System;assembly=System.Runtime"
      Title="Запись к репетитору"
      Background="#F8F9FA">

    <Page.Resources>
        <!-- Стиль для анимированных кнопок -->
        <Style x:Key="AnimatedButton" TargetType="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                           To="1.05" Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                           To="1.05" Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                           To="1" Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                           To="1" Duration="0:0:0.2">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для полей ввода -->
        <Style x:Key="InputField" TargetType="{x:Type Control}">
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="56"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#42A5F5"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#42A5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Фоновый градиент -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F8F9FA" Offset="0"/>
                <GradientStop Color="#E3F2FD" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель с заголовком и кнопкой назад -->
            <Grid Grid.Row="0" Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource AnimatedButton}"
                        Width="48" Height="48"
                        Padding="0"
                        Background="White"
                        BorderThickness="0"
                        materialDesign:ElevationAssist.Elevation="Dp2">
                    <materialDesign:PackIcon Kind="ArrowLeft" 
                                           Width="24" Height="24" 
                                           Foreground="#1976D2"/>
                </Button>

                <TextBlock Grid.Column="1"
                         Text="Запись к репетитору"
                         FontSize="32"
                         FontWeight="Bold"
                         Foreground="#1976D2"
                         VerticalAlignment="Center"
                         Margin="24,0,0,0"/>
            </Grid>

            <!-- Основное содержимое -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Левая панель с информацией о репетиторе -->
                <materialDesign:Card Grid.Column="0" 
                                   UniformCornerRadius="16"
                                   Margin="0,0,32,0"
                                   Background="White"
                                   materialDesign:ElevationAssist.Elevation="Dp4">
                    <Grid Margin="40">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Информация о репетиторе -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,40">
                            <TextBlock Text="О репетиторе"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Foreground="#1976D2"
                                     Margin="0,0,0,24"/>

                            <Border Background="#E3F2FD" 
                                    CornerRadius="12" 
                                    Padding="24">
                                <StackPanel>
                                    <TextBlock Text="{Binding TutorName}"
                                             FontSize="28"
                                             FontWeight="Bold"
                                             Foreground="#333"/>
                                    <TextBlock Text="Профессиональный преподаватель"
                                             FontSize="16"
                                             Foreground="#666"
                                             Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Дополнительная информация -->
                        <StackPanel Grid.Row="1">
                            <materialDesign:Card UniformCornerRadius="8" 
                                               Margin="0,0,0,16" 
                                               Background="#FAFAFA"
                                               Padding="16">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Certificate"
                                                           Width="24" Height="24"
                                                           Foreground="#42A5F5"
                                                           Margin="0,0,16,0"/>
                                    <TextBlock Text="Подтвержденный преподаватель"
                                             FontSize="16"
                                             Foreground="#333"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card UniformCornerRadius="8" 
                                               Background="#FAFAFA"
                                               Padding="16">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Clock"
                                                           Width="24" Height="24"
                                                           Foreground="#42A5F5"
                                                           Margin="0,0,16,0"/>
                                    <TextBlock Text="Быстрый ответ в течение дня"
                                             FontSize="16"
                                             Foreground="#333"/>
                                </StackPanel>
                            </materialDesign:Card>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Правая панель с формой записи -->
                <materialDesign:Card Grid.Column="1" 
                                   UniformCornerRadius="16"
                                   Width="400"
                                   Background="White"
                                   materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Margin="32">
                        <TextBlock Text="Выберите время"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="#1976D2"
                                 Margin="0,0,0,32"/>

                        <!-- Выбор даты -->
                        <TextBlock Text="Дата занятия"
                                 FontSize="16"
                                 FontWeight="Medium"
                                 Foreground="#555"
                                 Margin="0,0,0,8"/>
                        
                        <DatePicker SelectedDate="{Binding SelectedDate, UpdateSourceTrigger=PropertyChanged}"
                                  DisplayDateStart="{x:Static sys:DateTime.Today}"
                                  Style="{StaticResource InputField}"
                                  materialDesign:HintAssist.Hint="Выберите дату"
                                  materialDesign:TextFieldAssist.HasClearButton="True"/>

                        <!-- Выбор времени -->
                        <TextBlock Text="Время занятия"
                                 FontSize="16"
                                 FontWeight="Medium"
                                 Foreground="#555"
                                 Margin="0,24,0,8"/>
                        
                        <ComboBox ItemsSource="{Binding AvailableTimes}"
                                SelectedItem="{Binding SelectedTime}"
                                Style="{StaticResource InputField}"
                                materialDesign:HintAssist.Hint="Выберите время"/>

                        <!-- Кнопка подтверждения -->
                        <Button Content="Подтвердить запись"
                                Command="{Binding ConfirmBookingCommand}"
                                Style="{StaticResource AnimatedButton}"
                                Background="#42A5F5"
                                Foreground="White"
                                materialDesign:ButtonAssist.CornerRadius="28"
                                Height="56"
                                FontSize="16"
                                FontWeight="Medium"
                                Margin="0,40,0,0">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15" 
                                                ShadowDepth="2" 
                                                Color="#42A5F5"
                                                Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</Page>