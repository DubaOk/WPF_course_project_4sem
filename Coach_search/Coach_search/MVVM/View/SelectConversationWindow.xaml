<mah:MetroWindow x:Class="Coach_search.MVVM.View.SelectConversationWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                 Title="Выберите собеседника"
                 Height="500"
                 Width="400"
                 WindowStartupLocation="CenterScreen"
                 GlowBrush="{DynamicResource MahApps.Brushes.Accent}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Выберите собеседника" Style="{StaticResource HeaderText}" Margin="0,0,0,10"/>

        <ListBox Grid.Row="1" ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" Style="{StaticResource ListBoxStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardStyle}" Margin="0,5">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="40" Height="40" Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding AvatarPath, FallbackValue=W:\Labs_sem4\course_project\Coach_search\Coach_search\MVVM\View\images\icons\defaultavatar.png}"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Style="{StaticResource SubHeaderText}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="2" Content="Выбрать" Command="{Binding SelectUserCommand}" Style="{StaticResource PrimaryButton}" Margin="0,10,0,0" Width="120" Height="40"/>
    </Grid>
</mah:MetroWindow>