<Page x:Class="Coach_search.MVVM.View.TutorProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="TutorProfilePage">
    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка "Назад" -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка "Назад" -->
            <Button Grid.Column="0" 
                    Command="{Binding GoBackCommand}" 
                    Style="{DynamicResource MahApps.Styles.Button}" 
                    Background="Transparent" 
                    BorderBrush="Transparent" 
                    Padding="5" Margin="0,10,0,9" RenderTransformOrigin="0.512,0.528">
                <materialDesign:PackIcon Kind="ArrowLeft" Width="20" Height="20" Foreground="#666"/>
            </Button>

            <TextBlock Grid.Column="1" 
                       Text="Профиль репетитора" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="10,10,-10,10" 
                       Foreground="#333" 
                       Style="{DynamicResource MahApps.Styles.TextBlock}"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,20,0" HorizontalAlignment="Center">
                <Ellipse Width="150" Height="150" Margin="0,0,0,10">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding AvatarPath, FallbackValue=W:\Labs_sem4\course_project\Coach_search\Coach_search\MVVM\View\images\icons\defaultavatar.png}"/>
                    </Ellipse.Fill>
                </Ellipse>
                <Button Content="Загрузить аватарку" 
                        Command="{Binding UploadAvatarCommand}" 
                        Style="{StaticResource PrimaryButton}" 
                        Background="#42A5F5" 
                        BorderBrush="#42A5F5" 
                        Padding="10,5" 
                        mah:ControlsHelper.CornerRadius="5" Height="30"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="ФИО" 
                           Margin="0,0,0,5" 
                           Style="{DynamicResource MahApps.Styles.TextBlock}"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10" 
                         Style="{DynamicResource MahApps.Styles.TextBox}"
                         mah:TextBoxHelper.Watermark="Введите ваше ФИО"/>

                <TextBlock Text="Предмет" 
                           Margin="0,0,0,5" 
                           Style="{DynamicResource MahApps.Styles.TextBlock}"/>
                <ComboBox SelectedItem="{Binding Subject}" 
                          ItemsSource="{Binding Subjects}" 
                          Margin="0,0,0,10" 
                          Style="{DynamicResource MahApps.Styles.ComboBox}"
                          mah:TextBoxHelper.Watermark="Выберите предмет"/>

                <TextBlock Text="Описание" 
                           Margin="0,0,0,5" 
                           Style="{DynamicResource MahApps.Styles.TextBlock}"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                         AcceptsReturn="True" 
                         Height="100" 
                         Margin="0,0,0,10" 
                         Style="{DynamicResource MahApps.Styles.TextBox}"
                         mah:TextBoxHelper.Watermark="Расскажите о себе"/>

                <TextBlock Text="Стоимость за час (₽)" 
                           Margin="0,0,0,5" 
                           Style="{DynamicResource MahApps.Styles.TextBlock}"/>
                <TextBox Text="{Binding PricePerHour, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10" 
                         Style="{DynamicResource MahApps.Styles.TextBox}"
                         mah:TextBoxHelper.Watermark="Введите стоимость"/>

                <TextBlock Text="Рейтинг" 
                           Margin="0,0,0,5" 
                           Style="{DynamicResource MahApps.Styles.TextBlock}"/>
                <TextBox Text="{Binding Rating, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10" 
                         Style="{DynamicResource MahApps.Styles.TextBox}"
                         mah:TextBoxHelper.Watermark="Введите рейтинг (0-5)"
                         IsReadOnly="True"/>

                <Button Content="Сохранить" 
                        Command="{Binding UpdateProfileCommand}" 
                        Style="{StaticResource PrimaryButton}" 
                        Background="#42A5F5" 
                        BorderBrush="#42A5F5" 
                        Padding="15,5" 
                        Margin="0,10,0,0" 
                        HorizontalAlignment="Right" 
                        mah:ControlsHelper.CornerRadius="5" Height="35"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>