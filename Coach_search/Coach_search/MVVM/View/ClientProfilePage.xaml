<Page x:Class="Coach_search.MVVM.View.ClientProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Личный кабинет" 
      Background="{DynamicResource MahApps.Brushes.ThemeBackground}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка "Назад" -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Style="{StaticResource MahApps.Styles.Button.Flat}"
                    Command="{Binding GoBackCommand}"
                    ToolTip="Назад">
                <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24" Foreground="#666"/>
            </Button>
            <TextBlock Text="Личный кабинет" 
                       FontSize="24" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10,0"
                       Foreground="#333"/>
        </StackPanel>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- Блок профиля -->
                <Border CornerRadius="8" 
                        Background="{DynamicResource MahApps.Brushes.Control.Background}"
                        Padding="20" 
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Аватар -->
                        <StackPanel Grid.Column="0">
                            <Ellipse Width="100" Height="100">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding CurrentClient.AvatarPath, FallbackValue=W:\Labs_sem4\course_project\Coach_search\Coach_search\MVVM\View\images\icons\defaultavatar.png}"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Button Content="Загрузить аватар" 
                                    Command="{Binding UploadAvatarCommand}" 
                                    Margin="0,10,0,0" 
                                    Style="{DynamicResource MahApps.Styles.Button}"
                                    Background="#42A5F5"
                                    BorderBrush="#42A5F5"
                                    Padding="10,5"
                                    mah:ControlsHelper.CornerRadius="5"/>
                        </StackPanel>

                        <!-- Данные профиля -->
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Text="Ваш профиль" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,15"
                                       Foreground="#333"/>

                            <TextBlock Text="Имя" Margin="0,0,0,5" Style="{DynamicResource MahApps.Styles.TextBlock}"/>
                            <TextBox Text="{Binding CurrentClient.Name, UpdateSourceTrigger=PropertyChanged}"
                                     mah:TextBoxHelper.Watermark="Введите ваше имя"
                                     Margin="0,0,0,10"
                                     Style="{DynamicResource MahApps.Styles.TextBox}"/>

                            <TextBlock Text="Email" Margin="0,0,0,5" Style="{DynamicResource MahApps.Styles.TextBlock}"/>
                            <TextBlock Text="{Binding CurrentClient.Email}"
                                       FontSize="14"
                                       Margin="0,0,0,15"
                                       Foreground="#666"/>

                            <Button Content="Сохранить изменения"
                                    Command="{Binding SaveProfileCommand}"
                                    HorizontalAlignment="Left"
                                    Style="{DynamicResource MahApps.Styles.Button}"
                                    Background="#42A5F5"
                                    BorderBrush="#42A5F5"
                                    Padding="15,5"
                                    mah:ControlsHelper.CornerRadius="5"
                                    Width="200"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Блок записей -->
                <Border CornerRadius="8" 
                        Background="{DynamicResource MahApps.Brushes.Control.Background}"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Ваши записи" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"
                                   Foreground="#333"/>

                        <ItemsControl ItemsSource="{Binding Bookings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            Padding="15"
                                            Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding TutorName}"
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           Foreground="#333"/>
                                                <TextBlock Text="{Binding DateTime, StringFormat='Запись на {0:dd MMMM yyyy} в {0:HH:mm}', ConverterCulture='ru-RU'}"
                                                           FontSize="14"
                                                           Foreground="#666"
                                                           Margin="0,5,0,0"/>
                                                <TextBlock Text="{Binding Status}"
                                                           FontSize="14"
                                                           Foreground="#666"
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" 
                                                    Content="Отменить"
                                                    Command="{Binding DataContext.CancelBookingCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{DynamicResource MahApps.Styles.Button}"
                                                    Background="#EF5350"
                                                    BorderBrush="#EF5350"
                                                    Padding="10,5"
                                                    mah:ControlsHelper.CornerRadius="5"
                                                    Visibility="{Binding CanCancel, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                            <Button Grid.Column="2"
                                                     Content="Оставить отзыв"
                                                     Command="{Binding DataContext.AddReviewForBookingCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                     CommandParameter="{Binding}"
                                                     Style="{DynamicResource MahApps.Styles.Button}"
                                                     Background="#42A5F5"
                                                     BorderBrush="#42A5F5"
                                                     Padding="10,5"
                                                     mah:ControlsHelper.CornerRadius="5"
                                                     Visibility="{Binding CanLeaveReview, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Блок отзывов -->
                <Border CornerRadius="8" 
                        Background="{DynamicResource MahApps.Brushes.Control.Background}"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Ваши отзывы" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"
                                   Foreground="#333"/>

                        <ItemsControl ItemsSource="{Binding Reviews}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            Padding="15"
                                            Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="{Binding TutorName, StringFormat='Репетитор: {0}'}"
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Foreground="#333"
                                                       Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding Text}"
                                                       FontSize="14"
                                                       Foreground="#333"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Rating, StringFormat='Рейтинг: {0} ★'}"
                                                       FontSize="14"
                                                       Foreground="#666"
                                                       Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding CreatedAt, StringFormat='Создан: {0:dd MMMM yyyy HH:mm}'}"
                                                       FontSize="14"
                                                       Foreground="#666"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>